<Window x:Class="HotBoxSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotBoxSoftware"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <StackPanel Name="mainGrid">
        <TextBlock Name="TextBlockError" Foreground="Red" Margin="10" FontWeight="Bold" FontSize="14">
            Error updating values!
        </TextBlock>
        <DataGrid Name="moduleDataGrid" IsReadOnly="True" FontSize="16" MouseDoubleClick="OpenValueWindow_MouseDoubleClick">
        </DataGrid>
        <Button Height="50"  Width="100" Click="Button_Click">
            Test button
        </Button>
    </StackPanel>
</Window>
