<Window x:Class="HotBoxSoftware.ValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotBoxSoftware"
        mc:Ignorable="d"
        Title="Hotbox Value Change" Height="200" Width="300"
        ResizeMode="CanMinimize">
    <Viewbox StretchDirection="DownOnly">
    <Grid>
        <StackPanel>
                <TextBlock Name="TextBlockModuleName" HorizontalAlignment="Center" Margin="20" FontSize="22"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBox Name="TextBoxValue" HorizontalAlignment="Center" Width="100" FontSize="14"  TextAlignment="Center"/>

                    <TextBlock Name="TextBlockUnit" HorizontalAlignment="Center" FontSize="14"/>
                </StackPanel>
            <Button HorizontalAlignment="Center" Height="30" Width="100" FontSize="14" FontWeight="Bold" Click="Apply_Click" IsDefault="True">
                Apply change
            </Button>
        </StackPanel>
    </Grid>
    </Viewbox>
</Window>
