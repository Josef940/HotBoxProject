<Window x:Class="HotBoxSoftware.ValueChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotBoxSoftware"
        mc:Ignorable="d"
        Title="ValueChartWindow" Height="500" Width="1000">
    <Viewbox StretchDirection="Both" Stretch="Fill">
        <Canvas Height="150" Width="400" Name="myCanvas">
            <TextBlock Margin="0,32" Name="YHighestValue">100</TextBlock>
            <Polyline Name="yLine" Stroke="Black" StrokeThickness="2" Margin= "25,40"  Points="0 0, 0 100"></Polyline>
            <Polyline Name="xLine" Stroke="Black" StrokeThickness="2" Margin= "25,40"  Points="0 100, 350 100"></Polyline>
            <Polyline Name="ValueChart" Margin="25,40" Stroke="Blue" StrokeThickness="2" Points="30 0, 0 100" />
        </Canvas>
    </Viewbox>
</Window>
