<Window x:Class="HotBoxSoftware.PickChartInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotBoxSoftware"
        mc:Ignorable="d"
        Title="Hotbox Chart" Height="300" Width="450"
        ResizeMode="NoResize"
        Icon="favicon.ico">
    <Viewbox>
        <Grid>
            <StackPanel>
                <TextBlock Name="Label_TextBlock" HorizontalAlignment="Center" Margin="20" FontSize="22"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBox Name="Minutes_TextBox" HorizontalAlignment="Center" Width="100" FontSize="14"  TextAlignment="Center"/>

                    <TextBlock Text=" minutes" HorizontalAlignment="Center" FontSize="14"/>
                </StackPanel>
                <Button HorizontalAlignment="Center" Height="30" Width="100" FontSize="14" FontWeight="Bold" IsDefault="True">
                    Apply change
                </Button>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
